<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyStudyJapanese.MakeWordSetPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">

            <Button x:Name ="createListButton" Text="Create a New List" Clicked="OnCreateListButtonClicked"></Button>
            <Button x:Name ="editListButton" Text="Edit a Word List" Clicked="OnEditListButtonClicked"></Button>
            <Button x:Name ="deleteListButton" Text="Delete a Word List" Clicked="OnDeleteListButtonClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>